{
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
    },
    "[less]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[svelte]": {
        "editor.defaultFormatter": "svelte.svelte-vscode"
    },
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "svelte"
    ],
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "less.format.spaceAroundSelectorSeparator": true,
    "svelte.enable-ts-plugin": true,
    "svelte.plugin.svelte.defaultScriptLanguage": "ts",
    "svelte.plugin.svelte.format.config.printWidth": 180,
    "svelte.plugin.svelte.format.config.singleQuote": true,
    "svelte.plugin.svelte.format.config.svelteBracketNewLine": false,
    "svelte.plugin.svelte.format.config.svelteStrictMode": true
}
